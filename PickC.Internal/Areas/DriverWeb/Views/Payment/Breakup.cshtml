
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Breakup</title>
    <link href="@Url.Content("~/Css/font-awesome-4.6.2/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/AdminLTE.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <style type="text/css">
        .marginTop {
            margin-top: 10px;
        }
    </style>
</head>
<body class="container">
    <div class="row">
        <div class="col-md-6 col-xs-6 text-center">
            <h4 class="box-title">Today's Summary</h4>
            <h3><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h3>
        </div>
        <div class="col-md-6 col-xs-6 text-center"">
            <h4 class="box-title">Bookings</h4>
            <h3>0</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#breakUpTab">BREAKUP</a></li>
                <li><a data-toggle="tab" href="#rideTab">RIDES</a></li>                
            </ul>
            <div class="tab-content">
                <div id="breakUpTab" class="tab-pane fade in active">
                    <table class="table">
                        <tr>
                            <td><h5>Operator Bill</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                        <tr>
                            <td><h5>OLA Fees</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                        <tr>
                            <td><h5>TDS</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                        <tr>
                            <td><h5>Tolls/Parkings</h5></td>
                            <td><h5><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;0.00</h5></td>
                        </tr>
                    </table>                    
                </div>
                <div id="rideTab" class="tab-pane fade">
                    <div class="row marginTop">
                        <div class="col-md-12 col-xs-12">
                            <div class="box box-default box-solid">
                                <div class="box-header with-border">
                                    <h3 class="box-title">CANCELLED RIDE</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <h5>Share Ride - 2 Bookings (DDD) <i class="fa fa-car" aria-hidden="true"></i>&nbsp; Share</h5>
                                        </div>                                        
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 col-xs-3">
                                            <h5>Distance Travelled</h5><br />
                                            <span>km</span>
                                        </div>
                                        <div class="col-md-3 col-xs-3">
                                            <h5>Ride Time</h5><br />
                                            <span>min</span>
                                        </div>
                                        <div class="col-md-3 col-xs-3">
                                            <h5>Operator Bill</h5><br />
                                            <span></span>
                                        </div>
                                        <div class="col-md-3 col-xs-3">
                                            <h5>Ride Earnings</h5><br />
                                            <span></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <h5>ride cancelled <span class="pull-right">                                                
                                                @Html.ActionLink("REVERIFY", "Reverify", "Payment", null, null)
                                                </span></h5>                                            
                                        </div>
                                    </div>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</body>
</html>
